extends layout

block content
  .container-fluid.fill-height
    .row.toolbar
      .col-xs-12.col-sm-8.small
        button#delete.btn.btn-success.btn-xs(disabled='disabled')
          span.glyphicon.glyphicon-remove-circle()
          span  Entferne GeoJSON-Schicht
    .row
      #resizable.col-xs-12.col-sm-8
        #accordionMap
        panel
          .panel-heading.panel-default
            a.card.panel-title(data-toggle='collapse', href='#collapseMap')
              | Karte
            #collapseMap.collapse.show(data-parent='#accordionMap')
              .card
                .card-body          
                  .panel-body
                    #map
      #mirror.col-xs-12.col-sm-4
        #accordion  
          panel
            .panel-heading.panel-default 
              a.collapsed.panel-title(data-toggle='collapse', href='#collapseOne')
                | Neues Institut hinzufügen
              #collapseOne.collapse(data-parent='#accordion')
                .card
                  .card-body
                    .panel-body
                      .form-group  
                        label.badge(for='GeoJSONname') Institutsname
                        textarea#GeoJSONname.form-control(rows='1', placeholder="Hier Name einfügen")
                      .btn-group(style='margin-bottom: 5px;')
                        button.btn.badge#GeoJSON GeoJSON
                        button.btn.badge#URL URL
                      br                                          
                      #GeoJSON-field
                        .form-group
                          textarea#geojson-area.form-control(rows='4', placeholder="Hier GeoJSON einfügen", style='margin-bottom: 5px;')
                          button.btn.badge(onclick='loadGeoJSON()', style='background-color: #777;')
                            span
                            |  Zeige auf Karte
                      #URL-field
                        .form-group
                          textarea#url-area.form-control(rows='1', placeholder="Hier URL einfügen", style='margin-bottom: 5px;')
                          button.btn.badge(onclick='loadURL()', style='background-color: #777;')
                            span
                            |  Zeige auf Karte
                      .form-group
                        br
                        button#download.btn.btn-success.btn(onclick='saveToDatabase()', disabled='disabled')
                          span.glyphicon.glyphicon-save()
                          span  In Datenbank speichern
          panel
            .panel-heading.panel-default
              .card
                .card-header
                  a.collapsed.h2.panel-title(data-toggle='collapse', href='#collapseTwo')
                    | Neue Fachschaft hinzufügen
                  #collapseTwo.collapse(data-parent='#accordion')
                    .card-body                  
                      panel
                        .panel-body
                          .form-group
                            label.badge(for='FSname') Name
                            form#FSname
                              select.custom-select(name='Abkürzungen')
                                option(selected='')
                                option(value='fb1') Evangelisch-Theologische Fakultät
                                option(value='fb2') Katholisch-Theologische Fakultät
                                option(value='fb3') Rechtswissenschaftliche Fakultät
                                option(value='fb4') Wirtschaftwissenschaftliche Fakultät
                                option(value='fb5') Medizinische Fakultät
                                option(value='fb6') Erziehungswissenschaft und Sozialwissenschaften
                                option(value='fb7') Psychologie und Sportwissenschaften
                                option(value='fb8') Geschichte/Philosophie
                                option(value='fb9') Philologie
                                option(value='fb10') Mathematik und Informatik
                                option(value='fb11') Physik
                                option(value='fb12') Chemie und Pharmazie
                                option(value='fb13') Biologie
                                option(value='fb14') Geowissenschaften
                                option(value='fb15') Musikhochschule                            
                            br
                            label.badge(for='abk') Abkürzung
                            form#abk
                              select.custom-select-sm(name='Abkürzungen')
                                option(selected='')
                                option(value='fb1') FB1
                                option(value='fb2') FB2
                                option(value='fb3') FB3
                                option(value='fb4') FB4
                                option(value='fb5') FB5
                                option(value='fb6') FB6
                                option(value='fb7') FB7
                                option(value='fb8') FB8
                                option(value='fb9') FB9
                                option(value='fb10') FB10
                                option(value='fb11') FB11
                                option(value='fb12') FB12
                                option(value='fb13') FB13
                                option(value='fb14') FB14
                                option(value='fb15') FB15
                                                          
                            br
                            label.badge(for='FSurl-area') Webseite
                            textarea#FSurl-area.form-control(rows='1', placeholder='Hier URL einfügen')
                            br
                            label.badge(for='institute') Institute
                            textarea#institute.form-control(rows='1', placeholder='Hier Institute einfügen')
                            br
                            button#download2.btn.btn-success.btn(onclick='saveToDatabase2()')
                              span.glyphicon.glyphicon-save()
                              span  In Datenbank speichern          
  // /.container
  script(src='javascripts/resize.js')
  script(src='javascripts/map.js')
  script(src='javascripts/map_functions.js')
  